<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="well well-sm">
    <h3><%= @registered_application.name %></h3>
    <h4><%= link_to @registered_application.url, @registered_application.url %></h4>
</div>
<h4> Application Events </h4>
<div class = "row">

  <% @events.each do |event, name| %>
    <%= event %>
    <%= pie_chart @registered_application.events.group(:name).count %>
    <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
    <hr>
  <% end %>
</div><br>

<div class= "row">
  <%= link_to "Registered Applications", registered_applications_path, class: 'btn btn-success' %>
</div>
